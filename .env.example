# Database (Docker Postgres - recommended)
# 도커 DB 연결 문자열(권장). 기본 포트는 54321.
DATABASE_URL="postgresql://techradar:techradar@localhost:54321/tech_radar"

# Database (Existing local Postgres - optional)
# 이미 설치된 로컬 Postgres를 쓸 때의 예시.
# DATABASE_URL="postgresql://postgres@localhost:5432/techradar?schema=public"

# API
# API 서버 포트 (기본 4002)
API_PORT=4002

# Web
# Web에서 API 호출할 기본 주소
NEXT_PUBLIC_API_BASE=http://localhost:4002

# RSS / Worker
# 워커가 큐를 폴링하는 주기(ms)
WORKER_POLL_INTERVAL_MS=1000

# Fetch limits
# 소스당 최대 파싱 개수(먼저 자른 뒤 기간 필터 적용)
MAX_ITEMS_PER_SOURCE=50
# 수집 기간(기본 14일, UI에서 1/7/30/180일로 덮어쓸 수 있음)
LOOKBACK_DAYS=14
# HTML 페이지 fallback 사용 여부 (RSS가 없을 때 HTML 파싱 시도)
HTML_FALLBACK_ENABLED=true
# HTML fallback 시 페이지네이션 최대 탐색 페이지 수
HTML_FALLBACK_MAX_PAGES=3
# 전체 동시 요청 수
FETCH_CONCURRENCY=6
# 도메인당 동시 요청 수
FETCH_DOMAIN_CONCURRENCY=2
# 소스별 요청 타임아웃(ms)
FETCH_TIMEOUT_MS=10000
# 실패 시 재시도 횟수
FETCH_RETRY=1

# Cleanup
# 인박스 보관 기간(일) — 지난 항목 자동 정리
CLEANUP_INBOX_DAYS=7
# FetchRun 보관 개수 — 최근 N개만 유지
CLEANUP_RUN_KEEP=100
